<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreas.grid_view_test.MainActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        app:layout_constraintHorizontal_weight="2">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo3" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:drawableTop="@android:drawable/btn_plus"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo5" />


        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="100dp"
            android:drawableTop="@android:drawable/btn_minus"
            android:layout_gravity="fill"
            android:text="woolllo6" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="woolllo9" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="lots of text for this box makes it go around and round" />


    </GridLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
